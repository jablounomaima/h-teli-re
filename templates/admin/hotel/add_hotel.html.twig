<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
            integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
            crossorigin="anonymous"
    />

    <link
            href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
            rel="stylesheet"
    />

    <title>Hotel Management - Add Hotel</title>
</head>
<body>
<header id="admin-header">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Navbar</a>
        <button
                class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="{{ path('admin_hotel_create') }}" class="nav-link">Back to website</a>
                </li>
            </ul>

        </div>
    </nav>
</header>

<main id="admin-main">
    <section class="admin-form">
        <div class="container">
            <h2>Add Hotel</h2>
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name, 'Hotel Name') }}
                {{ form_widget(form.name, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.location, 'Location') }}
                {{ form_widget(form.location, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.contactInfo, 'Contact Info') }}
                {{ form_widget(form.contactInfo, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.imagePath, 'Hotel Image') }}
                {{ form_widget(form.imagePath, { 'attr': { 'class': 'form-control-file' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.chaine, 'Hotel Chaine') }}
                {{ form_widget(form.chaine, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            {{ form_end(form) }}
        </div>
    </section>
</main>
</body>
</html>
