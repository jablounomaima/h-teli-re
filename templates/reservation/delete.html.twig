<form action="{{ path('reservation_delete', { id: reservation.id }) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete_reservation_' ~ reservation.id) }}">
    <button type="submit" class="btn btn-danger">Supprimer</button>
</form>